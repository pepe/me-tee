source :rubygems

# Project requirements
gem 'rake'
gem 'rack-flash'
gem 'thin' # or mongrel

# Component requirements
gem 'haml'
gem 'mongoid'
gem 'bson_ext', :require => "mongo"

# Test requirements
group :test do
  gem "rspec-core"
  gem "rspec-expectations"
  gem "rspec-mocks"
  gem 'cucumber'
  gem 'capybara'
  gem 'rack-test', :require => 'rack/test', :group => 'test'
  gem 'autotest'
  gem 'autotest-fsevent'
end



# Padrino
gem 'padrino'
