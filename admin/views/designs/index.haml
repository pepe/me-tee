.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:designs, :index)
      %li=link_to pat(:new), url(:designs, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:design)
    .inner
      %table.table
        %tr
          %th.first=mat(:design, :hobby)
          %th=mat(:design, :created_at)
          %th=mat(:design, :updated_at)
          %th=mat(:design, :job)
          %th=mat(:design, :face)
          %th.last="&nbsp;"
        -@designs.each do |design|
          %tr
            %td.first=design.hobby
            %td=design.created_at
            %td=design.updated_at
            %td=design.job
            %td=design.face
            %td.last
              =button_to pat(:edit), url(:designs, :edit, :id => design.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:designs, :destroy, :id => design.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")