.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:orders, :index)
      %li.active=link_to pat(:new), url(:orders, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:order)
    .inner
      -form_for :order, url(:orders, :create), :class => :form do |f|
        =partial "orders/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")